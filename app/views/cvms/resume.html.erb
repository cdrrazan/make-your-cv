<div class="panel panel-default">
    <div class="panel-body">
        <blockquote>
            <div id="page-wrap">
                <div id="contact-info" class="vcard">
                    <h2 style="font-size: 48px"><%= "#{@resume.fname.capitalize} #{@resume.mname.capitalize} #{@resume.lname.capitalize}" %></h2>
                    <hr>
                    <p>
                        Cell: <span class="tel"></span><%= "#{@resume.mobile}" %><br />
                        Adress:</b> <%= "#{@resume.street.capitalize}, #{@resume.district.capitalize}, #{@resume.country.capitalize}" %>
                    </p>
                    Email: <a class="email" href="<%= "mailto://#{@resume.email}" %>"><%= "#{@resume.email}" %></a>
                    <br>
                    Website: <a href="<%= "https://#{@resume.website}" %>"><%= "https://#{@resume.website}" %></a>
                    <hr>
                    <div class="clear"></div>
                    <dd class="clear"></dd>
                    <dt>Education</dt>
                    <dd>
                    <%@resume.educations.each do |education| %>
                    <h2><%= education.level.upcase%> </h2>
                    <p><%= education.institute %>, <%= education.year %>, <%= education.percentage %>%</p>
                    <% end %>
                    </dd>
                    <dl>
                        <dd class="clear"></dd>
                        <dt>Skill</dt>
                        <dd>
                        <p><%= @resume.skill %></p>
                        </dd>
                        <dd class="clear"></dd>
                        <dt>Experience</dt>
                        <dd>
                        <% @resume.experiences.each do |exp| %>
                        <h2><%= exp.position.capitalize %> at <%= exp.company%></h2>
                        <p>
                            <%= exp.jobdetail %>
                        </p>
                        <p>
                            <%= exp.startdate %>-
                            <%= exp.enddate %>
                        </p>
                        <h2>Project</h2>
                        <hr>
                        <% exp.projects.each do |pro| %>
                        <h4><%= pro.pname %></h4>
                        <p><%= pro.description%></p>
                        <p><%= pro.startdate%>-<%= pro.enddate%></p>
                        <% end %>
                        <br><br>
                        <% end %>
                        </dd>
                        <dd class="clear"></dd>
                        <dt>Interest</dt>
                        <dd><%= @resume.interest%></dd>
                    </dl>
                </div>
            </div>
        </blockquote>
        <br>
        <br>
        <br>
        <p>
            <center>PDF generated by make-your-cv! <%= Date.today.year %>. </center>
        </p>
    </div>
</div>
