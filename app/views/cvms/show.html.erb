<center>
    <h1>CV Details!</h1>
</center>
<div class="panel panel-default">
    <div class="panel-body">
        <blockquote>
            <h3><b>Name:</b> <%= "#{@cvm.fname} #{@cvm.mname} #{@cvm.lname}" %></h3>
            <h3><b>Adress:</b> <%= "Street: #{@cvm.street} District: #{@cvm.district} Country: #{@cvm.country}" %></h3>
            <h3><b>Phone:</b> <%= "Landline: #{@cvm.land} Mobile: #{@cvm.mobile}" %></h3>
            <h3><b>Email:</b> <%= @cvm.email %></h3>
            <h3><b>Website:</b> <%= "https://#{@cvm.website}" %></h3>
            <h3><b>Education:</b><br><br>
                <%= "Level: SLC Institute: #{@cvm.institute} Year: #{@cvm.year} Percentage: #{@cvm.percentage}" %><br><br>
                <%= "Level: +2 Institute: #{@cvm.hinstitute} Year: #{@cvm.hyear} Percentage: #{@cvm.hpercentage}" %><br><br>
               <% if "#{@cvm.binstitute}".empty? && "#{@cvm.byear}".empty? && "#{@cvm.bpercentage}".empty? %>
               <% else %>
                <%= "Level: Bachleor Institute: #{@cvm.binstitute} Year: #{@cvm.byear} Percentage: #{@cvm.bpercentage}" %>
                <% end%>
            </h3>
            <h3><b>Skill:</b> <%= @cvm.skill %></h3>
            <h3><b>Project:</b> <%= @cvm.project %></h3>
            <h3><b>Interest:</b> <%= @cvm.interest %></h3>
        </blockquote>
        <%= link_to "Edit Details", edit_cvm_path(@cvm), class: 'btn btn-primary'%>
        <%= link_to "Delete this record", cvm_path(@cvm), method: :delete, class: 'btn btn-danger'%>
        <br>
        <center>
            <%= link_to "Download CV in PDF format", cvm_path(@cvm, format: "pdf"), class: 'btn btn-primary'%>
        </center>
    </div>
</div>
<br>
